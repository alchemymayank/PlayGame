<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rmit.playgame">

    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".PlayGameApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data android:name="com.google.android.gms.games.APP_ID"
            android:value="@string/app_id"/>
        <meta-data android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"/>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".dashboard.DashboardActivity"></activity>
        <activity android:name=".play.PlayActivity"></activity>
        <activity android:name=".quickplay.QuickPlayActivity"></activity>
        <activity android:name=".quiz.QuizActivity"></activity>
        <activity android:name=".quickplay.QuickPlayGame"></activity>
        <activity android:name=".realtime.RealtimeExample"></activity>
        <activity android:name=".newquickplay.NewQuickPlay"></activity>
    </application>

</manifest>