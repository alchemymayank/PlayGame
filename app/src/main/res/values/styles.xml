<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryPurple</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkPurple</item>
        <item name="colorAccent">@color/colorAccentPurple</item>
    </style>

    <style name="GameScreen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="LLScreen" parent="@style/GameScreen">
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">30dp</item>
    </style>

    <style name="MainScreenButton" parent="@style/GameButton">
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="GameButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/AccentColor</item>
        <item name="android:textColor">@color/ButtonTextColor</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="MainScreenButtonBlurb" parent="@style/GameBlurb">
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="GameBlurb" parent="@style/Blurb">
        <item name="android:text">@string/game_blurb</item>
        <item name="android:layout_marginBottom">40dp</item>
    </style>

    <style name="Blurb">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/BlurbColor</item>
    </style>



</resources>
